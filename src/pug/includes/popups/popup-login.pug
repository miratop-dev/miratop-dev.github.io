.popup.hide#popup-login
  a.popup__close(href='#', data-js-handler='popup__handler-close')
  .popup__title Вітаємо!
  form.popup__form(action='#') 
    label.popup__label
      .popup__desc Електронна пошта
      input.popup__input.popup__input--text(type='email' name='login_name' placeholder='Email')
    label.popup__label
      .popup__desc Пароль
      input.popup__input.popup__input--text(type='password' name='login_pass' placeholder='Password')
    a.popup__restore(href="#") Забули пароль?
    input.popup__input.popup__input--submit(type='submit' value='Войти')
    .popup__unregistered 
      span Не зареєстровані? 
      a(href="#popup-register", data-js-handler='popup__handler') Створити акаунт
    .popup__socials 
      a.popup__social(href='#')
        img(src='assets/img/popup-google.png')
      a(href='#')
        img(src='assets/img/popup-facebook.png')        