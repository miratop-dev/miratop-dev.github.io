extends ../layout/2columns-narrow-sidebar

block variables
  - var title = 'Mira.hub search task';
  - var description = 'Mira.hub search task';
  - var pageClass = 'search-page';
  - let witchPage = 'search'
  - let pageTitle = 'Поиск предложения'

block title 
  .page-title
    .page-title__container
      h1 Поиск 
        span.c-accent.c-accent--pagetitle предложения

block statusbar
  .search-page-top 
    .search-page-top__container 
      .breadcrumbs
        a.breadcrumbs__home(href="/") 
        a.breadcrumbs__link.breadcrumbs__link--current(href="/")= pageTitle
      a.search-page-top__filter.c-button.c-button--primary.c-button--filter(data-js-handler='mobile-filter__handler') Фильтр
      .sort
        span.sort__legend Сортировать:
        .sort__select 
          select
            option По дате создания
            option По расположению
            option По рейтингу

block aside
  include ../includes/modules/task-filters  

block content 
  .stubs  
    .stubs__container    
      .stubs__block
        .stubs__img 
          img(src="assets/img/stubs-searching.png", alt="img")    
        .stubs__desc Підбір перевірених екпертів за обраною екпертизою триває   
      .stubs__block
        .stubs__img 
          img(src="assets/img/stubs-expertise.png", alt="img")    
        .stubs__desc Для обраної екпертизи відсутні опубліковані пропозиції           
      .stubs__block
        .stubs__img 
          img(src="assets/img/stubs-settings.png", alt="img")    
        .stubs__desc Сторінка в розробці           
      .stubs__block 
        .stubs__img 
          img(src="assets/img/stubs-script.png", alt="img")    
        .stubs__desc Триває процес розробки           
  +pagination      