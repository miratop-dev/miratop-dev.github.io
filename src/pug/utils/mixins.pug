mixin searchFilters(args)
  .filter-block(class=args.expanded ? '' : 'collapse')
    .filter-block__title.c-title.c-title__title5(class=args.expanded ? 'expanded' : 'collapse' data-js-handler="filter__toggle")= args.title
    each input, index in args.inputs
      if(index < 5)
        label.filter-block__label
          input.filter-block__checkbox(type='checkbox' name= input.name checked= input.checked)
          p= input.label
      else
        label.filter-block__label.hide
          input.filter-block__checkbox(type='checkbox' name= input.name checked= input.checked)
          p= input.label  
    a.filter-block__more(href="#", data-js-handler='expand-list__handler') Показати ще 
      span.filter-block__quantity 18  

mixin searchBlockExpert(args)
  .search__block
    header.search__header
      .search__imgwrap
        img(src= args.image alt="avatar")
      .search__summary
        .search__title.c-title.c-title__title4= args.name
        .c-info
          .c-info__experience= args.expirience
          .c-info__projects= args.projects
          if(args.free)
            .c-info__available.c-info__available--free Доступний
          else 
            .c-info__available.c-info__available--busy зайнятий
        .search__progress
          case args.progress
            when 'high'
              progress.search__progressbar.search__progressbar--high(max='10' value= args.value)
            when 'middle'
              progress.search__progressbar.search__progressbar--middle(max='10' value= args.value)
            when 'low'
              progress.search__progressbar.search__progressbar--low(max='10' value= args.value)
            default
              progress.search__progressbar.search__progressbar--high(max='10' value= args.value)                        
          span.search__value.c-title.c-title__title5= args.value
    .search__info
      .search__description= args.description
      .c-tags 
        each tag, index in args.tags
          if(index < 3)
            a.c-tags__tag(href= tag.url)= tag.name
          else 
            a.c-tags__tag.hide(href= tag.url)= tag.name
          if ((index == args.tags.length - 1) && (args.tags.length > 3))
            a.c-tags__tag(href="#", data-js-handler='expand-list__handler') еще 
              span.c-tags__num= args.tags.length - 3
    a.c-button.c-button--primary.c-button--md.search__button(href= args.expertLink) Зв'язатись     

